
<div class="col s4 center"><h4>New  Property Creation</h4></div>

<div class="row">
  <div class = "col s6 offset-s3">
    <form action='/properties' method='POST' autocomplete="new-password">
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

        <div class="row">
          <div class="input-field">
              <label for="address">Address:</label>
              <input type="text" name="address" value="<%=flash[:address]%>"><br>
          </div>
        </div>

        <div class="row">
          <div class="input-field">
              <label for="rent">Rent:</label>
              <input type="text" name="rent" value="<%=flash[:rent]%>"><br>
          </div>
        </div>

        <!-- need a checkbox for avaialble -->
        <div class="row">
          <p>
            <input type="checkbox" id="available" name="available" checked />
            <label for="available">Available</label>
          </p>
        </div>


        <!-- need to change this to a date picker -->
        <div class="row">
            <label for="date_available">Date Available:</label>
            <input type="date" name="date_available" class="datepicker">
        </div>

        <div class="file-field input-field">
            <%= file_field_tag 'property_image', accept: 'image/png,image/gif,image/jpeg' %>
        </div>

        <div class="row">
          <button class="btn light-blue lighten-1" type="submit" name="action">Submit
          </button>
        </div>
    </form>

    <% if flash[:errors] %>
      <% if flash[:login_error] == "login" %>
        <% flash[:errors].each do |msg| %>
          <p> <%= msg %></p>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
