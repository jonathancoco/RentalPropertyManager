
<br>
<div class="col s4 center"><h5>Property Attributes - <%=@property.location%></h5></div>
<br>

<div class="row">
  <div class = "col s12">

    <%= form_for @attribute, html: { multipart: true } do |f| %>
    <% if flash[:errors] %>
      <div id="error_explanation">
        <p><%= pluralize(flash[:errors].count, "error") %> prohibited this attribute from being saved:</p>

        <ul>
        <% flash[:errors].each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class = "row">
      <div class="col s12">
        <%= f.hidden_field:property_id, :value => @property.id %>

        <div class="input-field inline">
          <%= f.label :key, 'Attribute:' %>
          <%= f.text_field :key %>
        </div>

        <div class="input-field inline">
          <%= f.label :value, 'Value:' %>
          <%= f.text_field :value %>
        </div>

        <%= f.submit 'Create Attribute' %>
    </div>
  </div>

  <% end %>

  </div>
</div>

<div class="row center">
  <table class ="highlight bordered striped">
    <% @all_property_attributes.each do |attribute| %>
    <tr>
      <td><%= attribute.key %></td>
      <td><%= attribute.value %></td>
      <td><%= link_to "Delete", property_attribute_path(attribute), :method => :delete %> </td>
    </tr>
    <% end %>
  </table>
</div>
